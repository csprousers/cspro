<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gov.census.cspro.smartsync.addapp.ServerDetailsFragment">


    <TextView
        android:id="@+id/textview_server_details_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/add_app_server_details_prompt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edittext_add_app_server_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_server_details_prompt"
        android:layout_alignRight="@+id/textview_server_details_prompt"
        android:layout_below="@+id/textview_server_details_prompt"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittxt_border"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="textNoSuggestions|textUri"
        android:maxLines="1"
        android:nextFocusDown="@+id/button_add_app_connect" >
    </EditText>

    <Button
        android:id="@+id/button_add_app_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/connect_button_label" />

</RelativeLayout>
