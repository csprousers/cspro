<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewNotesFieldLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/buttonNotesGoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewNotesFieldNote"
        android:layout_marginLeft="10dp"
        android:background="@drawable/notes_button_goto"
        android:contentDescription="@string/notes_goto" />

    <ImageButton
        android:id="@+id/buttonNotesDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewNotesFieldNote"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/buttonNotesGoto"
        android:background="@drawable/notes_button_delete"
        android:contentDescription="@string/notes_delete" />

    <TextView
        android:id="@+id/textViewNotesFieldNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewNotesFieldLabel"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/buttonNotesDelete"
        android:ellipsize="none"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:width="0dip" />

</RelativeLayout>