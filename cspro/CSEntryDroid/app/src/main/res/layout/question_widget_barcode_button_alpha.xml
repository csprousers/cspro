<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_margin="5dp"
  android:paddingBottom="4dp">

  <gov.census.cspro.commonui.AlphaFieldEditText
    android:id="@+id/barcodeValue"
    style="@style/Base.TextAppearance.AppCompat.Medium"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_weight="9"
    android:ellipsize="end"
    android:ems="10"
    android:editable="false"
    android:clickable="false"
    android:cursorVisible="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:textColor="@color/dark"
    android:textColorHint="@color/dark"
    android:background="@drawable/multibox_edittext_border"
    android:textAlignment="center" />

  <ImageButton
    android:id="@+id/barcodeRead"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_weight="1"
    android:background="@drawable/multibox_barcode_border"
    android:contentDescription="@string/barcode_image_button_desc"
    android:gravity="center"
    android:src="@drawable/ic_qr_code"
    android:textAlignment="center" />

</LinearLayout>
