<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- disable state. -->
  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <corners android:radius="6dp" />
      <solid android:color="@color/camera_text_bckgrnd" />
      <stroke android:width="2dp" android:color="@color/camera_text_bckgrnd_enabled" />
    </shape>
  </item>

  <!--released state. -->
  <item android:state_pressed="false">
    <shape android:shape="rectangle">
      <corners android:radius="6dp" />
      <solid android:color="@color/camera_text_bckgrnd" />
      <stroke android:width="2dp" android:color="@color/camera_text_bckgrnd_enabled" />
    </shape>
  </item>

  <!--pressed state. -->
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="6dp" />
      <solid android:color="@color/camera_text_bckgrnd_enabled" />
      <stroke android:width="2dp" android:color="@color/camera_text_bckgrnd" />
    </shape>
  </item>

</selector>